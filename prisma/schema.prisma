// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("users")
}

model Categories {
  id    Int     @id @default(autoincrement())
  name  String
  Tests Tests[]

  @@map("categories")
}

model Tests {
  id                  Int    @id @default(autoincrement())
  name                String
  pdfUrl              String
  categoryId          Int
  teacherDisciplineId Int

  Categories        Categories         @relation(fields: [categoryId], references: [id])
  TeacherDiscipline TeacherDisciplines @relation(fields: [teacherDisciplineId], references: [id])

  @@map("tests")
}

model Disciplines {
  id     Int    @id @default(autoincrement())
  name   String
  termId Int

  TeacherDiscipline TeacherDisciplines[]
  Terms             Terms                @relation(fields: [termId], references: [id])

  @@map("disciplines")
}

model TeacherDisciplines {
  id           Int     @id @default(autoincrement())
  teacherId    Int
  disciplineId Int
  tests        Tests[]

  Teachers    Teachers    @relation(fields: [teacherId], references: [id])
  Disciplines Disciplines @relation(fields: [disciplineId], references: [id])

  @@map("teacherDisciplines")
}

model Terms {
  id     Int @id @default(autoincrement())
  number Int

  disciplines Disciplines[]

  @@map("terms")
}

model Teachers {
  id                Int                  @id @default(autoincrement())
  name              String
  
  TeacherDiscipline TeacherDisciplines[]

  @@map("teachers")
}
